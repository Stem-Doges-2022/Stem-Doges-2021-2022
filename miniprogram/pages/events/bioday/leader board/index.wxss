/* miniprogram/pages/bitday/leader board/index.wxss */
.leaderboard{
  width: 80%;
  height: calc(80vh - 30px);
  margin-left:10%;
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.274);
}
.yourRank{
  width: 100%;
  margin-top:calc(10vh - 30px);
  text-align: center;
}


.footer{
  position: fixed;
  bottom:0px;
  height:50px;
  width:calc(50% - 0.5px);
  background-color: white;
  text-align: center;
  font: bold;
  padding-top: 20px;
  font-size: 20px;
}

.bar{
  position: absolute;
  width: 100%;
  height:2px;
  background-color:black;
}

.username{
  position: absolute;
  left:20px;
}

.userpoints{
  position: absolute;
  right:20px;
}

.userarea{
  margin-top:10px;
}