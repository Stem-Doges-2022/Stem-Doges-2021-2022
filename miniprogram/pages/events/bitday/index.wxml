<!--miniprogram/pages/bitday/index.wxml-->  
<scroll-view scroll-y style="height:100vh">
  <button bindtap="scanQRCode" style="padding-top:5vh;width: 90%;height: 15vh;margin-left: 5%; scanBtn; font-size:30px">SCAN CODE</button>
  <image src="cloud://shsid-3tx38.7368-shsid-3tx38-1303924092/bitday/programming.jpg" class="eventHeader" bindtap="showPopup" data-popupNum="2">Programming Questions</image>
  <image src="cloud://shsid-3tx38.7368-shsid-3tx38-1303924092/bitday/trivia.jpg" class="eventHeader" bindtap="showPopup" data-popupNum="1"> Trivia</image>
  <image src="cloud://shsid-3tx38.7368-shsid-3tx38-1303924092/bitday/leaderboard.jpg"view class="eventHeader" bindtap="redirect" data-Qnum="1" data-link="../bitday/leader board/index" data-Qnum="0">Leader Board</image>
  <image src="cloud://shsid-3tx38.7368-shsid-3tx38-1303924092/bitday/schedule.jpg" class="eventHeader" bindtap="showPopup" data-popupNum="3">Schedule</image>
  <image src="cloud://shsid-3tx38.7368-shsid-3tx38-1303924092/bitday/scavenger.jpg" class="eventHeader"  bindtap="showPopup" data-popupNum="4">Scavenger Hunt</image>
  <view wx:if="{{isAdmin}}" class="eventHeader"  bindtap="showPopup" data-popupNum="5">admin</view>
  <view style="height:50px"></view>
</scroll-view>


<!-- info input area -->
<view wx:if="{{showPopup[0]}}" class="overlay" ></view>
<view wx:if="{{showPopup[0]}}" class="mini popup" >
  <form bindsubmit="submitInfo" class="answerInputBox">
    <input  style="margin-top:40%" id="inputAnswer" class="inputArea" placeholder="Name" name="name" />
    <input  id="inputAnswer" class="inputArea" placeholder="Class" name="class" />
    <input  id="inputAnswer" class="inputArea" placeholder="Grade" name="grade" />
    <button class="submit" style="position:absolute;bottom:0px;width:40%;left:30%" form-type="submit" >Continue</button>
  </form>
</view>


<!-- info trivia area -->
<view wx:if="{{showPopup[1]}}" class="overlay" bindtap="hidePopup"></view>
<view wx:if="{{showPopup[1]}}" class="mini popup" >
  <text bindtap="hidePopup" class="closePopup">X</text>
  <text class="eventTitle">Trivia</text>
  <view wx:if="{{dayNum>=1}}" bindtap="redirect" data-Qnum="1" data-link="../bitday/trivia/index" class="eventHeader" style="height:50px; background-color:{{colors[1]}}"><view style="margin-top:15px;">10/18</view></view>
  <view wx:else class="eventHeader" style="height:50px"><view style="margin-top:15px;">10/18</view></view>

  <view wx:if="{{dayNum>=2}}" bindtap="redirect" data-Qnum="2" data-link="../bitday/trivia/index" class="eventHeader" style="height:50px; background-color:{{colors[1]}}"><view style="margin-top:15px;">10/19</view></view>
  <view wx:else class="eventHeader" style="height:50px"><view style="margin-top:15px;">10/19</view></view>

  <view wx:if="{{dayNum>=3}}" bindtap="redirect" data-Qnum="3" data-link="../bitday/trivia/index" class="eventHeader" style="height:50px; background-color:{{colors[1]}}"><view style="margin-top:15px;">10/20</view></view>
  <view wx:else class="eventHeader" style="height:50px"><view style="margin-top:15px;">10/20</view></view>
</view>


