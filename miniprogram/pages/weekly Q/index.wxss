/* miniprogram/pages/bitday/index.wxss */
.eventHeader{
  width: 90%;
  height: 25vh;
  margin-left: 5%;
  background-color:rgba(0, 0, 0, 0.377);
  border-radius: 15px;
  margin-top:20px;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: table;
}

.leaderboard{
  background-color: rgba(136, 133, 133, 0.89);
  width: 90%;
  position: absolute;
  left:5%;
  bottom:5vh;
  height:calc(65vh - 50px);
}
.leaderboardElementWeek{
  margin-left: 20px;
  font-size: 20px;
  margin-top: 15px;
}

.leaderboardTop{
  background-color: grey;
  width: 90%;
  position: absolute;
  bottom:calc(70vh - 50px);
  left:5%;
  height:50px;
  border-bottom:solid black;
}

.leaderboardElement{
  
  bottom:5vh;
  width:100%;
  height:50px;
  border-bottom:solid black;
}

.yourRank{
  width: 100%;
  margin-top:calc(10vh - 30px);
  text-align: center;
}

.bar{
  position: absolute;
  width: 100%;
  height:2px;
  background-color:black;
}

.username{
  position: absolute;
  left:20px;
}

.userpoints{
  position: absolute;
  right:20px;
}

.userarea{
  margin-top:10px;
}