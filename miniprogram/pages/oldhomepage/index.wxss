/* miniprogram/pages/index/index.wxss */
page {
  background-color: #eeeeee;
}

.thisWeeksQuestions{
  width: 90%;
  height: 30vh;
  background-color:#F4E2D8;
  margin-left: 5%;
  border-radius: 20px;
  box-shadow: 0 0 8px 4px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: table;
  text-align: center;
  
}

.mySearchbar{
  padding-left:5px;
  margin-left:5%;
  background-color:#555555;
  color:white;
  box-shadow: 0 0 8px 4px rgba(0, 0, 0, 0.2);
  width:calc(90% - 5px);
  height:30px;
  margin-top:10px;
  border-radius: 10px;
}
.adminPanel{
  width: 100px;
  height: 50px;
  background-color:#CEAB67;
  border-radius: 10px;
  box-shadow: 0 0 8px 4px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: table;
  text-align: center;
  position:absolute;
  top:20px;
  right:5%;
}

.title{
  font-size: 40px;
  display: table-cell;
  vertical-align: middle;
  font-family:'REEJI-ZhenyanGB2.0';
  font-weight:600;
  color: #B0ABC2;
  filter: brightness(50%);
}

.newSection{
  margin-top: 20px;
}

.subtitle{
  margin-top:10px;
  color:#222222;
  font-size: 17px;
  font-family:'REEJI-ZhenyanGB2.0';
  font-weight:600;
  margin-left:5%;
}

.studyItem{
  width: 150px;
  height: 100px;
  background-color:#CEAB67;
  margin-left: 10px;
  border-radius: 20px;
  box-shadow: 0 0 4px 2px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: inline-block;
  text-align: center;
  margin-top:20px;
}

.seeAllQ{
  margin-top:10px;
  color:#F4E2D8;
  font-size: 17px;
  font-family:'REEJI-ZhenyanGB2.0';
  font-weight:600;
  width: 200px;
  background-color: #6d6c6c;
  border-radius: 10px;
  text-align: center;
  margin-left: calc(50% - 100px);
  box-shadow: 0 0 4px 2px rgba(0, 0, 0, 0.2);
}

.article{
  width:100%;
  height:40px;
  background-color:gray;
  margin-top:10px;
}

.overlay {
  height: 100vh;
  width: 100vw;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 90;
}

.weeklyResults{
  height: 80%;
  width: calc(100% - 100px);
  min-width: 250px;
  max-width: 500px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20px;
  text-align:center;
}

.closePopup {
  width: 20px;
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 20px;
}

.popup{
  background: white;
  z-index: 91;
  position: fixed;
}
